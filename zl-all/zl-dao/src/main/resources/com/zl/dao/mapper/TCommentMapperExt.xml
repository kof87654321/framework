<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zl.dao.mapper.TCommentMapperExt">
	<!-- 用于扩展com.zl.dao.mapper.TCommentMapper接口 可通过com.zl.dao.mapper.TCommentMapper.BaseResultMap 
		和com.zl.dao.mapper.TCommentMapper.Base_Column_List对其进行引用 by is_zhoufeng@163.com 
		2015-06-05 23:56:33. -->
	<resultMap id="BaseVOResultMap" type="com.zl.vo.TCommentCountVO">
		<result column="commentCount" property="commentCount" jdbcType="BIGINT" />
		<result column="ParentId" property="userFeedsId" jdbcType="BIGINT" />
	</resultMap>

	<select id="countsByParentIdsAndExample" parameterType="com.zl.pojo.TCommentExample"
		resultMap="BaseVOResultMap">
		select count(*) as commentCount,ParentId from T_Comment
		<if test="_parameter != null">
			<include refid="Example_Where_Clause" />
		</if>
	</select>

</mapper>