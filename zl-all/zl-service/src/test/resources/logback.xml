<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="false" scanPeriod="60 seconds" debug="false">
<!-- <configuration scan="false" scanPeriod="60 seconds" debug="false"> -->

  <property name="log.level"  value="INFO" />
  <property name="log.dir"  value="D:/zl_logs/test" />
 
  <!-- 控制台打印 -->
  <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
    <filter class="ch.qos.logback.classic.filter.ThresholdFilter">   
       <level>${log.level}</level>   
    </filter>  
    <encoder>
      <pattern>%-5level - %msg%n</pattern>
    </encoder>
  </appender>
  
  <!-- 记录项目所有日志 -->
  <appender name="testALl" class="ch.qos.logback.core.rolling.RollingFileAppender">
  		 <filter class="ch.qos.logback.classic.filter.ThresholdFilter">   
	       <level>${log.level}</level>   
	    </filter>  
        <file>${log.dir}/test.log</file>
		<encoder>
		       <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger[%line] - %msg%n</pattern>
		</encoder>
	    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
              <FileNamePattern>${log.dir}/back/test.%d{yyyy-MM-dd}.log</FileNamePattern>
              <MaxHistory>30</MaxHistory>
        </rollingPolicy>
   </appender>
   
   <!-- 记录项目ERROR级别文件 -->
   <appender name="testError" class="ch.qos.logback.core.rolling.RollingFileAppender">
		 <filter class="ch.qos.logback.classic.filter.ThresholdFilter">   
	       <level>ERROR</level>   
	    </filter>  
        <file>${log.dir}/test-error.log</file>
		<encoder>
		       <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger[%line] - %msg%n</pattern>
		</encoder>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
             <FileNamePattern>${log.dir}/back/test-error.%d{yyyy-MM-dd}.log</FileNamePattern>
             <MaxHistory>30</MaxHistory>
        </rollingPolicy>
   </appender>
   
   
   
  <root level="${log.level}">
    <appender-ref ref="console" />
    <appender-ref ref="testALl" />
    <appender-ref ref="testError" />
  </root>
  
  
</configuration>